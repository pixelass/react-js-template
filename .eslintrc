{
  "env": {
    "es2021": true,
    "node": true,
    "browser": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "eslint-config-prettier",
    "eslint-config-xo-react"
  ],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "eslint-plugin-storybook",
    "eslint-plugin-react",
    "eslint-plugin-react-hooks",
    "eslint-plugin-jest"
  ],
  "rules": {
    "react/prop-types": 0,
    "react/jsx-tag-spacing": [0, {
      "closingSlash": "never",
      "beforeSelfClosing": "always",
      "afterOpening": "never",
      "beforeClosing": "allow"
    }]
  }
}
